<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Products"> 
<select id="selectAll" resultClass="com.pojo.Products">
    select * from products
</select>

<select id="select" resultClass="com.pojo.Products">
    select product_id, product_name from products
       <dynamic prepend="WHERE ">
      <isNotNull property="product_id">
         product_id = #product_id#
      </isNotNull>
   </dynamic> 
</select>

<insert id="insert" parameterClass="com.pojo.Products">    
   insert into products(product_id, product_name) values (#product_id#, #product_name#)
</insert> 

<delete id="delete" parameterClass="int">
   delete from products WHERE  product_id = #product_id#
</delete>

<update id="update" parameterClass="com.pojo.Products">
   update products set product_name = #product_name# where product_id = #product_id#
</update>

</sqlMap>